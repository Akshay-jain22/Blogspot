<h1 class="text-center">Users</h1>
<br/>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col", colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr scope="row">
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class:"btn btn-outline-success" %></td>
        <% begin %>
          <% if current_user.id == user.id || current_user.admin %>
            <td><%= link_to 'Edit', edit_user_path(user), class:"btn btn-outline-secondary" %></td>
            <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-outline-danger" %></td>
          <% end %>
        <% rescue => e %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>